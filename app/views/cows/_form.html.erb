<div class="container">
  <%= simple_form_for(@cow) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :race %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <div>
    <%= f.input :photo, as: :attachinary %>
  </div>
  <% end %>
</div>
