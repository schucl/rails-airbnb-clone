  <div class="container">
    <div class="form-row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="logins">
          <p class="logins-title">Mettre une vache en location</p>
            <%= simple_form_for(@cow) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs input-claire">
                <%= f.input :name, placeholder: "PrÃ©nom de la vache", label: false %>
                <%= f.input :race, placeholder: "Sa race", label: false %>
