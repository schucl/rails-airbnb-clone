
<div class="padded">
  <div class="container media">
    <div class="row" class="media-body">
      <div class="col-xs-8 col-sm-8">
        <div class="row">
          <% if @cow.photo? %>
            <div class="cow-photo">
              <%= cl_image_tag @cow.photo.path %>
            </div>
          <% end %>
          <div class="cow-name">
          <h2><%= @cow.name %></h4>
          </div>
          <h4><%= @cow.race %></h4>
          <p><%= @cow.description %></p>
          <p><%= @cow.address %></p>
          <%= link_to "Back", cows_path %>
        </div>
    </div>

    <div class="col-xs-4">
      <div class="text-center padded features" id="form-container">
        <%= simple_form_for [@cow, @booking] do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :start_date %>
            <%= f.input :number_of_days %>
          </div>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12">
       <div class="media-section text-center">
          <h4>Share Link</h4>
          <div class="share-links">
            <a href="#" class="share-link bg-facebook">
              <i class="fa fa-facebook"></i>
            </a>
            <a href="#" class="share-link bg-twitter">
              <i class="fa fa-twitter"></i>
            </a>
            <a href="#" class="share-link bg-email">
              <i class="fa fa-envelope-o"></i>
            </a>
            <a href="#" class="share-link bg-text">
              <i class="fa fa-mobile"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>




