
<div class="banner" style="background-image: linear-gradient(-125deg, rgba(5,101,168,0.5) 0%, rgba(0,36,61,0.4) 20%), url('<%= image_path('background.jpg')%>');">
  <div class="container">
    <div class="form-row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="logins">
          <p class="logins-title">Update your profile</p>
            <%= simple_form_for(@user) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs input-claire">
                <%= f.input :first_name%>
                <%= f.input :last_name %>
                <%= f.input :email %>
                <%= f.input :description, as: :text, input_html: {rows: 4} %>
                <%= f.input :photo, as: :attachinary %>
              </div>

              <div class="form-action">

              <%= f.submit "Update", class: "form-button" %>
              <%= link_to "Back", user_path(current_user), class: "back-button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
